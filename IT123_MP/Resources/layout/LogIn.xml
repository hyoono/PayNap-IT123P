<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Log In"
        android:textSize="40dp"
        android:layout_marginTop="1.5dp"
        android:layout_marginBottom="9.0dp"
        android:textColor="#248fef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:layout_width="match_parent"
        android:layout_height="360.7dp"
        android:layout_weight="1"
        android:background="#95ffffff"
        android:layout_marginTop="0.0dp">
        <TextView
            android:text="Mobile No."
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25dp"
            android:minHeight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <TextView
                android:text="(+63)"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="50.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="123 456 7890"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:id="@+id/editText1" />
        </LinearLayout>
        <TextView
            android:text="Password:"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" />
        <CheckBox
            android:text="Show Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:id="@+id/checkBox1" />
        <Button
            android:text="Log In"
            android:layout_marginTop="3.0dp"
            android:textSize="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1f6fb6"
            android:id="@+id/button1" />
        <Button
            android:text="Cancel"
            android:layout_marginStart="10dp"
            android:textSize="30dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#f62534"
            android:id="@+id/button2" />
    </LinearLayout>
</LinearLayout>
