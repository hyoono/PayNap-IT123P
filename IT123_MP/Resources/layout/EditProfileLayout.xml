<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/edit_profile"
        android:textSize="45dp"
        android:layout_marginTop="35.8dp"
        android:layout_marginBottom="25.9dp"
        android:textColor="#248fef"
        android:layout_width="match_parent"
        android:layout_height="67.6dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <TextView
                android:text="@string/mobile_no"
                android:textSize="20dp"
                android:textColor="#248fef"
                android:textStyle="bold"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="#000000"
                android:layout_marginEnd="70dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/editText1" />
            <TextView
                android:text="@string/mobile_number_notice"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:gravity="center" />
            <TextView
                android:text="@string/customer_name"
                android:textSize="20dp"
                android:textColor="#248fef"
                android:layout_marginTop="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView3" />
            <CheckBox
                android:text="@string/name_change"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:textStyle="bold"
                android:layout_marginEnd="70dp"
                android:id="@+id/checkBox1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="#000000"
                android:layout_marginEnd="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" />
            <TextView
                android:text="@string/password"
                android:textSize="20dp"
                android:textColor="#248fef"
                android:layout_marginTop="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView4" />
            <CheckBox
                android:text="@string/change_password"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:textStyle="bold"
                android:layout_marginEnd="70dp"
                android:id="@+id/checkBox2" />
            <TextView
                android:text="@string/old_password"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3" />
            <CheckBox
                android:text="@string/show_password"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:textStyle="bold"
                android:layout_marginEnd="70dp"
                android:id="@+id/checkBox3" />
            <TextView
                android:text="@string/new_password"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText4" />
            <TextView
                android:text="@string/reenter_password"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5" />
            <TextView
                android:text="@string/reenter_password_notice"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView9"
                android:gravity="center" />
            <Button
                android:text="@string/confirm_button"
                android:layout_marginTop="50dp"
                android:textSize="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="296.0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:backgroundTint="#1f6fb6"
                android:background="@drawable/topcorners"
                android:id="@+id/button1" />
            <Button
                android:text="@string/back_button"
                android:textSize="30dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:backgroundTint="#f62534"
                android:layout_marginTop="5dp"
                android:background="@drawable/bottomcorners"
                android:id="@+id/button2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
