<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="0.0dp">
        <TextView
            android:text="Welcome,"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:textColor="#248fef"
            android:textStyle="bold"
            android:textSize="60px"
            android:layout_marginStart="30px"
            android:id="@+id/textView2"
            android:layout_marginBottom="90.0dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="91.0dp"
            android:paddingBottom="10px">

            
            <TextView
            android:text="Your Balance:"
            android:textSize="35px"
            android:textColor="#248fef"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:id="@+id/textView4" />
            <TextView
            android:text=""
            android:textSize="100px"
            android:layout_marginBottom="1.0dp"
            android:textColor="#6C6C6C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="4px"
            android:layout_height="261.0dp"
            android:gravity="center"
            android:background="#80ffffff"
            android:layout_marginTop="4.0dp"
            android:layout_marginBottom="2.0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">
            <Button
                android:text="Cash in"
                android:layout_marginTop="8.3dp"
                android:textSize="35px"
                android:layout_width="130.5dp"
                android:layout_height="60.5dp"
                android:backgroundTint="#1f6fb6"
                android:id="@+id/button1" />
            <Button
                android:text="Send money"
                android:layout_marginTop="0dp"
                android:textSize="35px"
                android:layout_marginStart="30dp"
                android:layout_width="130.5dp"
                android:layout_height="60.5dp"
                android:backgroundTint="#1f6fb6"
                android:id="@+id/button2" />
            </LinearLayout>
            <Button
                android:text="View Transaction"
                android:layout_marginTop="7.0dp"
                android:textSize="35px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="290.0dp"
                android:layout_height="60.5dp"
                android:backgroundTint="#1f6fb6"
                android:id="@+id/button3" />
            <Button
                android:text="Edit user profile"
                android:layout_marginTop="8.5dp"
                android:textSize="35px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="290.0dp"
                android:layout_height="60.5dp"
                android:backgroundTint="#1f6fb6"
                android:id="@+id/button4"
                android:layout_marginBottom="0.0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

