<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="">
    <TextView
        android:text="Edit Profile"
        android:textSize="45px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="75px"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="50px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <TextView
                android:text="Mobile No."
                android:textSize="30px"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:layout_marginEnd="70px"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:id="@+id/editText1" />
            <TextView
                android:text="*You cannot edit your mobile number"
                android:textSize="35px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:gravity="center" />
            <TextView
                android:text="Customer Name:"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_marginTop="70px"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView3" />
            <CheckBox
                android:text="Change Name"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60px"
                android:textStyle="bold"
                android:layout_marginEnd="70px"
                android:id="@+id/checkBox1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:layout_marginEnd="70px"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" />
            <TextView
                android:text="Password"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_marginTop="70px"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textView4" />
            <CheckBox
                android:text="Change Password"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60px"
                android:textStyle="bold"
                android:layout_marginEnd="70px"
                android:id="@+id/checkBox2" />
            <TextView
                android:text="Enter Current Password:"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_marginTop="10px"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70px"
                android:layout_height="wrap_content"
                android:id="@+id/editText3" />
            <CheckBox
                android:text="Show Password"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60px"
                android:textStyle="bold"
                android:layout_marginEnd="70px"
                android:id="@+id/checkBox3" />
            <TextView
                android:text="Enter New Password:"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_marginTop="20px"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70px"
                android:layout_height="wrap_content"
                android:id="@+id/editText4" />
            <TextView
                android:text="Re-enter Password:"
                android:textSize="30px"
                android:textColor="#000000"
                android:layout_marginTop="50px"
                android:layout_marginStart="70px"
                android:layout_marginEnd="70px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginEnd="70px"
                android:layout_height="wrap_content"
                android:id="@+id/editText5" />
            <TextView
                android:text="*Make sure it matches the new password"
                android:textSize="35px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView9"
                android:gravity="center" />
            <Button
                android:text="Confirm Change"
                android:layout_marginTop="100px"       
                android:textSize="40px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#ff63"
                android:id="@+id/button1" />
            <Button
                android:text="Back"
                android:textSize="40px"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="70px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#f62534"
                android:id="@+id/button2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
