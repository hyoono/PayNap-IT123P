<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="">
    <TextView
        android:text="Sign Up"
        android:textSize="40px"
        android:layout_marginTop="1.5dp"
        android:layout_marginBottom="9.0dp"
        android:textColor="#248fef"
        android:layout_width="match_parent"
        android:layout_height="62.5dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="4px"
        android:paddingBottom="50px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginBottom="0.0dp"
        android:layout_width="match_parent"
        android:layout_height="424.5dp"
        android:background="#95ffffff">
        <TextView
            android:text="Mobile No."
            android:textSize="25px"
            android:layout_marginTop="50px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:textStyle="bold"
            android:layout_marginEnd="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <TextView
                android:text="(+63)"
                android:textSize="25px"
                android:layout_marginStart="70px"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="50.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />
            <EditText
                android:layout_width="192.0dp"
                android:hint="123 456 7890"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/editText1" />
        </LinearLayout>
        <TextView
            android:text="Customer Name:"
            android:textSize="25px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" />
        <TextView
            android:text="Create Password:"
            android:textSize="25px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText3" />
        <TextView
            android:text="Confirm Password:"
            android:textSize="25px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText4" />
        <CheckBox
            android:text="Show Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60px"
            android:textStyle="bold"
            android:layout_marginEnd="70px"
            android:id="@+id/checkBox1" />
    </LinearLayout>
    <Button
        android:text="Sign Up"
        android:layout_marginTop="3.0dp"
        android:textSize="50px"
        android:layout_marginStart="60dp"
        android:layout_width="255.5dp"
        android:layout_height="55.5dp"
        android:backgroundTint="#1f6fb6"
        android:id="@+id/button1" />
    <Button
        android:text="Cancel"
        android:layout_marginStart="100dp"
        android:textSize="50px"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="60.5dp"
        android:backgroundTint="#f62534"
        android:id="@+id/button2" />   
</LinearLayout>
