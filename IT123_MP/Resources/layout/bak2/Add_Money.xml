<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="">
    <TextView
        android:text="Send Money"
        android:textSize="45px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="75px"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:textStyle="bold"
        android:gravity="center" 
        android:id="@+id/textView1"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="50px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Your Balance:"
            android:textSize="35px"
            android:textColor="#248fef"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:id="@+id/textView2" />
        <TextView
            android:text=""
            android:textSize="100px"
            android:layout_marginBottom="1.0dp"
            android:textColor="#6C6C6C"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView3" />
        <TextView
            android:text="Enter amount:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50px"
            android:textColor="#000000"
            android:layout_marginStart="70px"
            android:layout_marginEnd="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView4" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="70px"
            android:textColor="#000000"
            android:textSize="50px"
            android:hint="0.00"
            android:layout_marginEnd="70px"
            android:layout_height="wrap_content"
            android:id="@+id/editText1" />
        <Button
            android:text="Cash In"
            android:layout_marginTop="100px"
            android:textSize="45px"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="60.5dp"
            android:backgroundTint="#1f6fb6"
            android:id="@+id/button1" />
    </LinearLayout>
</LinearLayout>
