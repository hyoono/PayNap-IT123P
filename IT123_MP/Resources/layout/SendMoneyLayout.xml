<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/send_money"
        android:textSize="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4.7dp"
        android:textColor="#248fef"
        android:layout_width="match_parent"
        android:layout_height="65.8dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:gravity="center" />
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <TextView
            android:text="@string/your_balance"
            android:textSize="35dp"
            android:textColor="#248fef"
            android:layout_width="match_parent"
            android:layout_height="47.3dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/textView8" />
        <TextView
            android:text=""
            android:textSize="40dp"
            android:layout_marginBottom="0.0dp"
            android:textColor="#6C6C6C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:gravity="center" />
        <TextView
            android:text="@string/send_to"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:hint="@string/send_money_hint"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/editText1" />
        <TextView
            android:text="@string/enter_amount"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:textColor="#000000"
            android:hint="@string/amount_value_hint"
            android:textSize="30dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/editText2" />
        <TextView
            android:text="@string/send_money_notice"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:gravity="center" />
        <Button
            android:text="@string/send_money"
            android:layout_marginTop="16dp"       
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="60.5dp"
            android:backgroundTint="#1f6fb6"
            android:background="@drawable/topcorners"
            android:id="@+id/button1" />
        <Button
            android:text="@string/back_button"
            android:textSize="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="60.5dp"
            android:textColor="#ffffff"
            android:backgroundTint="#f62534"
            android:layout_marginTop="5dp"
            android:background="@drawable/bottomcorners"
            android:id="@+id/button2" />
    </LinearLayout>
</LinearLayout>
